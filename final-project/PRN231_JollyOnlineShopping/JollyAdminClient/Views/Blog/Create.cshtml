@model JollyAPI.Models.DTOS.BlogDTO;

<div class="card">
    <form id="blog_form" method="post" asp-action="Create" class="form">
        <div class="card-body p-9">
            <div class="row mb-8 justify-content-center">
                <div class="col-xl-2">
                    <div class="fs-6 fw-bold mt-2 mb-3">
                        Tiêu đề:
                        <span class="text-danger">*</span>
                    </div>
                </div>
                <div class="col-xl-3">
                    <input type="text" asp-for="Title" class="form-control" name="Title" placeholder="Nhập tiêu đề" required="">
                </div>
                <div class="col-xl-2">
                    <div class="fs-6 fw-bold mt-2 mb-3">
                        Tóm tắt nội dung:
                        <span class="text-danger">*</span>
                    </div>
                </div>
                <div class="col-xl-3">
                    <input type="text" asp-for="ShortContent" class="form-control" name="ShortContent" placeholder="Enter nội dung tóm tắt" required="">
                </div>
            </div>

            <div class="row mb-8 justify-content-center">
                <div class="col-xl-2">
                    <div class="fs-6 fw-bold mt-2 mb-3">
                        Đường dẫn ảnh:
                        <span class="text-danger">*</span>
                    </div>
                </div>
                <div class="col-xl-3">
                    @* <label class="btn btn-primary">
                    Choose Image <input type="file" asp-for="ImageFiles" style="display: none;" required>
                    </label>*@

                    <input type="url" asp-for="Image" class="form-control" name="Image" placeholder="Enter ImageURL" required="">

                    @*<input type="file" asp-for="ImageFiles" name="imageFiles" multiple class="form-control" required  />
                    <span asp-validation-for="ImageFiles" class="text-danger"></span>*@
                </div>
                <div class="col-xl-2">
                    <div class="fs-6 fw-bold mt-2 mb-3">
                        Người dùng
                        <span class="text-danger">*</span>
                    </div>
                </div>
                <div class="col-xl-3">
                    <input type="text" class="form-control" name="userId" placeholder="Enter UserId" value="ADMIN" disabled>
                </div>
            </div>


            <div class="row mb-8 justify-content-center">
                <div class="col-xl-2" >
                    <div class="fs-6 fw-bold mt-2 mb-3">
                        Ngày đăng bài:
                        <span class="text-danger">*</span>
                    </div>
                </div>
                <div class="col-xl-3" >
                    <input type="date" asp-for="PublishedDate" class="form-control" name="PublishedDate" placeholder="Nhập ngày đăng bài" required="">
                </div>

                <div class="col-xl-2" style="visibility: hidden">
                    <div class="fs-6 fw-bold mt-2 mb-3">
                        Nội dung:
                        <span class="text-danger">*</span>
                    </div>
                </div>
                <div class="col-xl-3" style="visibility: hidden">
                    <textarea type="text" class="form-control" placeholder="Nhập nội dung bài viết" required=""> </textarea>

                </div>
            </div>
            <div class="row mb-8 justify-content-center">
                <!--end::Col-->
                <!--begin::Col-->

                <div class="col-xl-2">
                    <div class="fs-6 fw-bold mt-2 mb-3">
                        Nội dung:
                        <span class="text-danger">*</span>
                    </div>
                </div>
                <!--end::Col-->
                <!--begin::Col-->
                <div class="col-xl-8 fv-row">
                    <textarea asp-for="Content" class="form-control h-200px" type="text" id="Content" name="Content" placeholder="Nhập nội dung bài viết"></textarea>
                </div>
                <!--end::Col-->
            </div>
        </div>
        
        <div class="card-footer d-flex justify-content-center py-6 px-9">
            <a asp-action="Index" class="btn btn-secondary mx-5">Quay lại</a>
            <button type="submit" class="btn btn-primary mx-5">Xác nhậnn</button>
        </div>
    </form>
</div>
@section SonJS{
    <script>
        CKEDITOR.replace('Content')
        document.getElementById('blog_form').addEventListener('submit', (event) => {
            event.preventDefault();
            notifyCreateBlog();
        });
    </script>
}

