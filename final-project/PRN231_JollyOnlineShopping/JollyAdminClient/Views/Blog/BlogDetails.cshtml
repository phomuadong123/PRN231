@model JollyAPI.Models.Entity.Blog;
@using JollyAdminClient.Helper;
<div class="card">
    <!--begin::Card header-->
    <!--end::Card header-->
    <!--begin::Form-->
    <form id="employee_form" method="get" asp-action="BlogDetails" asp-controller="Blog" class="form">
        <!--begin::Card body-->
        <div class="card-body p-9">
            <!--begin::Row-->
            <div class="row mb-8 justify-content-center align-items-center">
                <!--begin::Col-->
                <div class="col-xl-2">
                    <div class="fs-6 fw-bold mt-2 mb-3">
                        Tiêu đề:
                        <span class="text-danger">*</span>
                    </div>
                </div>
                <!--end::Col-->
                <!--begin::Col-->
                <div class="col-xl-3 fv-row">
                    <input type="text" class="form-control form-control-solid" value="@Model.Title" disabled>
                </div>
                <!--end::Col-->
                <!--begin::Col-->
                <div class="col-xl-2">
                    <div class="fs-6 fw-bold mt-2 mb-3">
                        Tóm tắt nội dung:
                        <span class="text-danger">*</span>
                    </div>
                </div>
                <!--end::Col-->
                <!--begin::Col-->
                <div class="col-xl-3 fv-row">
                    @*  <span>@Model.ShortContent</span>*@
                    <input type="text" class="form-control form-control-solid" value="@Model.ShortContent" disabled>
                </div>
                <!--end::Col-->
            </div>
            <!--end::Row-->
            <!--begin::Row-->
            <div class="row mb-8 justify-content-center align-items-center">
                <!--begin::Col-->
                <div class="col-xl-2">
                    <div class="fs-6 fw-bold mt-2 mb-3">
                        Ảnh:
                        <span class="text-danger">*</span>
                    </div>
                </div>
                <!--end::Col-->
                <!--begin::Col-->
                <div class="col-xl-3 fv-row">
                    <a href="@Model.Image">
                        <img src="@Model.Image" class="img-fluid m-3" alt="Blog Image" />
                    </a>
                </div>


                <!--end::Col-->
                <!--begin::Col-->
                <div class="col-xl-2">
                    <div class="fs-6 fw-bold mt-2 mb-3">
                        Ngày đăng bài:
                        <span class="text-danger">*</span>
                    </div>
                </div>
                <!--end::Col-->
                <!--begin::Col-->
                <div class="col-xl-3 fv-row">
                    @*  <span>@Model.PublishedDate</span>*@
                    <input type="text" class="form-control form-control-solid" value="@Model.PublishedDate" disabled>

                </div>
                <!--end::Col-->
            </div>
            <!--end::Row-->
            <!--begin::Row-->

            <div class="row mb-8 justify-content-center align-items-center">
                <!--begin::Col-->
                <div class="col-xl-2">
                    <div class="fs-6 fw-bold mt-2 mb-3">
                        Nội dung:
                        <span class="text-danger">*</span>
                    </div>
                </div>
                <!--end::Col-->
                <!--begin::Col-->
                <div class="col-xl-8 fv-row">
                    <textarea class="form-control form-control-solid h-200px" disabled>@Model.Content</textarea>
                </div>
                <!--end::Col-->
            </div>

        </div>
        <div class="card-footer d-flex justify-content-center py-6 px-9">
            <a type="button" class="btn btn-secondary mx-5" href="/Blog/Index">Quay lại</a>
            <button type="submit" class="btn btn-primary mx-5">Xác nhận</button>
        </div>
    </form>
</div>
