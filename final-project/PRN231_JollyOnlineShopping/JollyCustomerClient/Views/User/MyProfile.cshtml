@{
    ViewData["Title"] = "Register";
}
@model JollyAPI.Models.Entity.User;

<!--hero banner-->
<div class="kalles-section page_section_heading">
    <div class="page-head tc pr oh cat_bg_img page_head_">
        <div class="parallax-inner nt_parallax_false lazyload nt_bg_lz pa t__0 l__0 r__0 b__0"
             data-bgset="https://demo-kalles-4-1.myshopify.com/cdn/shop/files/shop-banner.jpg?v=1651829187&width=1944"></div>
        <div class="container pr z_100">
            <h1 class="mb__5 cw">Tài khoản của tôi</h1>
        </div>
    </div>
</div>
<!--end hero banner-->
<!--page content-->
<div class="container cb ">
    <div class="row">
        <div class="col-3"></div>
        <div class="col-6 login-form mt__60 mb__60">
            <div id="CustomerRegisterForm">
                <h2 style="display: inline-block; margin-right: 10px;">Thông tin tài khoản</h2>
                <a href="/User/UpdateProfile?id=@Model.Id"><i class="fas fa-user-edit"></i></a>
                <input type="hidden" name="Id" value="@Model.Id">
                <input type="hidden" name="Role" value="@Model.Role">
                <p class="form-row">
                    <label for="rgs-f_name">Tên đầy đủ</label>
                    <input disabled type="text" id="rgs-f_name" name="FullName"
                           autocomplete="given-name" value="@Model.FullName">
                </p>
                <p class="form-row">
                    <label for="reg-l_name">Số điện thoại</label>
                    <input disabled type="text" value="@Model.Phone" name="Phone" id="reg-l_name"
                           autocomplete="family-name">
                </p>
                <p class="form-row">
                    <label for="reg-email">Email </label>
                    <input disabled type="email" value="@Model.Email" name="Email" id="reg-email" autocomplete="email"
                           aria-required="true">
                </p>
                <p class="form-row">
                    <label for="reg-pw">Mật khẩu</label>
                    <input disabled type="password" value="@Model.Password" name="Password" id="reg-pw" aria-required="true"></input>
                </p>
                <p class="form-row">
                    <div style="display: flex; align-items: center;">
                        <label>Địa chỉ</label>
                        <a href="/User/ChangeAddress?id=@Model.Id">
                            <i class="fa fa-edit" style="margin-left: 10px"></i>
                        </a>
                    </div>
                    @foreach (var address in Model.Addresses)
                    {
                        <input disabled type="text"
                               name="Address"
                               value="@address.Street, @address.Ward, @address.District,@address.City ">
                    }
                    @if (Model.Addresses.Count == 0)
                    {
                        <input disabled type="text" name="Address" value="Chưa có địa chỉ">
                    }
                </p>
            </div>
        </div>
        <div class="col-3"></div>

    </div>
</div>