@{
    ViewData["Title"] = "Register";
}
@model JollyAPI.Models.Entity.User;

<!--hero banner-->
<div class="kalles-section page_section_heading">
    <div class="page-head tc pr oh cat_bg_img page_head_">
        <div class="parallax-inner nt_parallax_false lazyload nt_bg_lz pa t__0 l__0 r__0 b__0"
             data-bgset="https://demo-kalles-4-1.myshopify.com/cdn/shop/files/shop-banner.jpg?v=1651829187&width=1944"></div>
        <div class="container pr z_100">
            <h1 class="mb__5 cw">Tài khoản của bạn</h1>
        </div>
    </div>
</div>
<!--end hero banner-->
<!--page content-->
<div class="container cb ">
    <div class="row">
        <div class="col-3"></div>
        <div class="col-6 login-form mt__60 mb__60">
            <div id="CustomerRegisterForm">
                <h2>Chỉnh sửa tài khoản</h2>
                <form method="post" asp-action="UpdateProfile" asp-controller="User" class="form">
                    <input type="hidden" name="Id" value="@Model.Id">
                    <input type="hidden" name="Role" value="@Model.Role">
                    <p class="form-row">
                        <label for="rgs-f_name">Tên đầy đủ: <span class="required">*</span></label>
                        <input type="text" id="rgs-f_name" name="FullName"
                               autocomplete="given-name" value="@Model.FullName">
                    </p>
                    <p class="form-row">
                        <label for="reg-l_name">Số điện thoại: <span class="required">*</span></label>
                        <input type="text" value="@Model.Phone" name="Phone" id="reg-l_name"
                               autocomplete="family-name">
                    </p>
                    <p class="form-row">
                        <label for="reg-email">Email: <span class="required">*</span></label>
                        <input readonly type="email" value="@Model.Email" name="Email" id="reg-email" autocomplete="email"
                               aria-required="true">
                    </p> 
                    <p class="form-row">
                        <label for="reg-pw">Mật khẩu: <span class="required">*</span></label>
                        <input type="password" value="@Model.Password" name="Password" id="reg-pw" aria-required="true">
                    </p>
                    <input type="submit" value="Lưu" class="btn js_add_ld">
                </form>
            </div>
        </div>
        <div class="col-3"></div>

    </div>
</div>
