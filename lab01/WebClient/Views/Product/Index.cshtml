@model IEnumerable<WebClient.Models.ProductRequest>

<h2>Danh sách sản phẩm</h2>
<a asp-action="Create" class="btn btn-primary">Thêm mới</a>
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Tên sản phẩm</th>
            <th>Giá</th>
            <th>Số lượng</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.ProductId</td>
                <td>@product.ProductName</td>
                <td>@product.Price</td>
                <td>@product.Stock</td>
                <td>
                    <a asp-action="Details" asp-route-id="@product.ProductId">Xem</a> |
                    <a asp-action="Edit" asp-route-id="@product.ProductId">Sửa</a> |
                    <a asp-action="Delete" asp-route-id="@product.ProductId">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
